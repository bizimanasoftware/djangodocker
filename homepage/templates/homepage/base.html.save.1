{% load static %}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="apple-touch-icon" sizes="180x180" href="/static/homepage/images/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/static/homepage/images/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/static/homepage/images/favicon-16x16.png">
    <link rel="manifest" href="/static/homepage/images/site.webmanifest">


    <title>{% block title %}Gloex â€” All-in-One Talent Platform{% endblock %}</title>

    <link rel="icon" href="{% static 'homepage/images/favicon.ico' %}" type="image/x-icon">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" xintegrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="{% static 'homepage/css/style.css' %}?v=2025">

    {% block extra_head %}{% endblock %}

</head>
<body>
    <!-- Preloader HTML Snippet -->
    <div id="preloader">
        <img src="{% static 'homepage/images/logo1go2crop.png' %}" alt="Gloex.org Logo" class="preloader-logo">
    </div>

    {% include 'homepage/partials/header.html' %}

    <main class="container mt-5 pt-5">
        {% if messages %}
            <div class="message-container mb-3">
                {% for message in messages %}
                    <div class="alert alert-dismissible fade show {% if message.tags %}alert-{{ message.tags }}{% else %}alert-info{% endif %}" role="alert">
                        {{ message }}
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                {% endfor %}
            </div>
        {% endif %}

        {% block content %}
        {% endblock %}
    </main>

    {% include 'homepage/partials/footer.html' %}

    <a href="{% url 'wallet:donate' %}" class="floating-donate-button">
        SUPPORT GLOEX
    </a>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" xintegrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    <script src="{% static 'homepage/js/script.js' %}"></script>

    {% block extra_js %}{% endblock %}

    <!-- Preloader JavaScript Snippet -->
    <script>
      console.log("Preloader script is running.");
      window.addEventListener('load', function () {
        console.log("Page has loaded. Hiding preloader.");
        var preloader = document.getElementById('preloader');
        if (preloader) {
          preloader.style.display = 'none';
        }
      });
    </script>
</body>
</html>
